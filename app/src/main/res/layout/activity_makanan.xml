<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Makanan"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/makanan"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/bluehome">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Nama Resto"
                android:textSize="22sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Nasi Goreng"
                android:textSize="22sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga   :"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RP.10.000"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah :"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-20dp"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_tmbah_krang" />

            <com.google.android.material.textfield.TextInputEditText
                   android:background="@drawable/edit_text_border"
                   android:layout_margin="10dp"
                   android:layout_width="350dp"
                   android:layout_height="120dp"
                   android:textColorHint="@color/white"
                    android:textAlignment="center"
                   android:hint="Tambah catatan pesanan">


               </com.google.android.material.textfield.TextInputEditText>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/tambahkeranjang"/>

</LinearLayout>